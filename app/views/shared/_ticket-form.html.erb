  <div class="ticket-form-container">
    <div id="ticket-form-title">What would you like to chat about?</div>
    <h6 class="text-muted">Type a question below to submit a topic!</h6>
    <% if current_user %>
      <div class="form-content">
        <%= simple_form_for @ticket do |f| %>
          <%= f.input :title, as: :text, label: false, placeholder: "e.g. How does population ethics affect our cause prioritisation judgements?" %>
          <%= f.input :anonymous, label: "Hide my name from the topic card" %>
          <div id="anonymous-sublabel">Note: we'll still introduce you by name if someone signs up to your topic</div>
          <div class="text-center">
            <%= f.submit 'Submit!', class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center">
       <%= link_to  new_user_session_path do %>
        <button class="btn btn-primary btn-lg">Get started</button>
        <% end %>
      </div>
    <% end %>
    <!-- <button class="btn btn-success predef-topic-btn">or select a predefined topic</button> -->
  </div>

