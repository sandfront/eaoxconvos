<% flash_position = (params[:action] == "home") ? "absolute" : ""  %>

<% if notice %>
  <div class="alert alert-info alert-dismissible" role="alert" style="position: <%= flash_position %>;">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= notice %>
  </div>
<% end %>
<% if alert %>
  <div class="alert alert-warning alert-dismissible" role="alert" style="position: <%= flash_position %>;">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= alert %>
  </div>
<% end %>
